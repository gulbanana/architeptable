<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:Architeptable.Models"
             x:Class="Architeptable.Views.Facilities" x:DataType="models:Facilities"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="400" d:DataContext="{x:Static models:Mock.Factories}">
  <DockPanel>
    <ListBox DockPanel.Dock="Left"
             Items="{Binding All}"
             SelectedItem="{Binding Current}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Classes="menuText" Text="{Binding Name}" Width="276" />
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <Border Classes="detail">
      <DataGrid Items="{Binding All}">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
        </DataGrid.Columns>
      </DataGrid>
    </Border>
  </DockPanel>
</UserControl>
