<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Architeptable.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Architeptable.Views.Recipes"
             x:DataType="models:Recipes">
    <DockPanel>
      <ListBox DockPanel.Dock="Left"
               Items="{Binding All}" 
               SelectedItem="{Binding Current}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Classes="menuText" Text="{Binding Name}" />
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>

      <DataGrid Items="{Binding Current.Ingredients}" Margin="0,4,0,0">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Ingredient" Binding="{Binding Name}" IsReadOnly="true" />
          <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" />
        </DataGrid.Columns>
      </DataGrid>
    </DockPanel>
</UserControl>
